<xs:schema targetNamespace="http://www.esdscom.eu/eSDScom" xmlns="http://www.w3.org/2001/XMLSchema" xmlns:eSDScom="http://www.esdscom.eu/eSDScom" xmlns:xs="http://www.w3.org/2001/XMLSchema" version="5.4.0">
    <xs:include schemaLocation="SDSComXMLDT.xsd"/>
    <xs:include schemaLocation="SDSComXMLCT.xsd"/>
    <xs:complexType name="ClassificationBR">
        <xs:sequence>
            <xs:element minOccurs="0" name="AbntNrb2015HazardClassification">
                <xs:annotation>
                    <xs:documentation>according to GHS revision 4</xs:documentation>
                </xs:annotation>
                <xs:complexType>
                    <xs:sequence>
                        <xs:sequence maxOccurs="unbounded" minOccurs="0">
                            <xs:element maxOccurs="1" minOccurs="1" name="HazardClassCategory" type="eSDScom:Ghs04ClassCategoryEnum"> </xs:element>
                            <xs:element maxOccurs="1" name="HazardClassCategoryPrintable" type="eSDScom:Phrase">
                                <xs:annotation>
                                    <xs:appinfo>SDScomBau</xs:appinfo>
                                    <xs:appinfo>SDScomChem</xs:appinfo>
                                    <xs:documentation>Printable, phrase based representation of HazardClassCategory. While this may be identical to HazardClassCatgory in its string representation, it provides a translated version linked to a phrase library for applications where this is useful.</xs:documentation>
                                </xs:annotation>
                            </xs:element>
                            <xs:element maxOccurs="1" minOccurs="0" name="ClassificationProcedure" type="eSDScom:Phrase">
                                <xs:annotation>
                                    <xs:documentation>To state how the individual classification is prepared. (This information should be shown in section 16). Only relevant for instances of type Classification in section 2. For components in section 3, this info should not be part of the SDS.</xs:documentation>
                                </xs:annotation>
                            </xs:element>
                        </xs:sequence>
                        <xs:group ref="eSDScom:ClassificationInfo"/>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
            <xs:element minOccurs="0" name="AbntNrb2019HazardClassification">
                <xs:annotation>
                    <xs:documentation>according to GHS revision 7. Adopted, but does not (yet) officially replace revision 4.</xs:documentation>
                </xs:annotation>
                <xs:complexType>
                    <xs:sequence>
                        <xs:sequence maxOccurs="unbounded" minOccurs="0">
                            <xs:element maxOccurs="1" minOccurs="1" name="HazardClassCategory" type="eSDScom:Ghs07ClassCategoryEnum"> </xs:element>
                            <xs:element maxOccurs="1" name="HazardClassCategoryPrintable" type="eSDScom:Phrase">
                                <xs:annotation>
                                    <xs:appinfo>SDScomBau</xs:appinfo>
                                    <xs:appinfo>SDScomChem</xs:appinfo>
                                    <xs:documentation>Printable, phrase based representation of HazardClassCategory. While this may be identical to HazardClassCatgory in its string representation, it provides a translated version linked to a phrase library for applications where this is useful.</xs:documentation>
                                </xs:annotation>
                            </xs:element>
                            <xs:element maxOccurs="1" minOccurs="0" name="ClassificationProcedure" type="eSDScom:Phrase">
                                <xs:annotation>
                                    <xs:documentation>To state how the individual classification is prepared. (This information should be shown in section 16). Only relevant for instances of type Classification in section 2. For components in section 3, this info should not be part of the SDS.</xs:documentation>
                                </xs:annotation>
                            </xs:element>
                        </xs:sequence>
                        <xs:group ref="eSDScom:ClassificationInfo"/>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="HazardLabellingBR">
        <xs:sequence>
            <xs:element minOccurs="0" name="AbntNrb2017HazardLabelling">
                <xs:annotation>
                    <xs:documentation>according to GHS revision 5</xs:documentation>
                </xs:annotation>
                <xs:complexType>
                    <xs:sequence>
                        <xs:element maxOccurs="6" minOccurs="0" name="HazardPictogram" type="eSDScom:GhsPictogramCodeEnum">
                            <xs:annotation>
                                <xs:appinfo>SDScomBau</xs:appinfo>
                                <xs:appinfo>SDScomChem</xs:appinfo>
                                <xs:documentation> Pictogram: A graphical presentation that includes a symbol plus other graphic elements, such as a border, background pattern or colour that is intended to convey specific information on the hazard concerned. </xs:documentation>
                            </xs:annotation>
                        </xs:element>
                        <xs:element maxOccurs="1" minOccurs="0" name="SignalWord" type="eSDScom:GhsSignalWord">
                            <xs:annotation>
                                <xs:appinfo>SDScomBau</xs:appinfo>
                                <xs:appinfo>SDScomChem</xs:appinfo>
                                <xs:documentation> Signal word: A word that indicates the relative level of severity of hazards to alert the reader to a potential hazard. </xs:documentation>
                            </xs:annotation>
                        </xs:element>
                        <xs:element maxOccurs="unbounded" minOccurs="0" name="HazardStatement" type="eSDScom:Ghs05HazardStatement">
                            <xs:annotation>
                                <xs:appinfo>SDScomBau</xs:appinfo>
                                <xs:appinfo>SDScomChem</xs:appinfo>
                                <xs:documentation> Hazard statement: A phrase assigned to a hazard class and category that describes the nature of the hazards of a hazardous substance or mixture, including, where appropriate, the degree of hazard. </xs:documentation>
                            </xs:annotation>
                        </xs:element>
                        <xs:element maxOccurs="unbounded" minOccurs="0" name="PrecautionaryStatement" type="eSDScom:Ghs05PrecautionaryStatement">
                            <xs:annotation>
                                <xs:appinfo>SDScomBau</xs:appinfo>
                                <xs:appinfo>SDScomChem</xs:appinfo>
                                <xs:documentation> Precautionary statement: A phrase that describes recommended measure(s) to minimise or prevent adverse effects resulting from exposure to a hazardous substance or mixture due to its use or disposal. </xs:documentation>
                            </xs:annotation>
                        </xs:element>
                        <xs:element maxOccurs="unbounded" minOccurs="0" name="AdditionalLabellingInfo" type="eSDScom:Phrase">
                            <xs:annotation>
                                <xs:appinfo>SDScomChem</xs:appinfo>
                            </xs:annotation>
                        </xs:element>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="ComponentBR">
        <xs:complexContent>
            <xs:extension base="eSDScom:Component">
                <xs:sequence>
                    <xs:element minOccurs="0" name="Classification" type="eSDScom:ClassificationBR"> </xs:element>
                    <xs:element maxOccurs="1" minOccurs="0" name="OnLabel" type="boolean">
                        <xs:annotation>
                            <xs:appinfo>SDScomChem</xs:appinfo>
                            <xs:documentation> Name of the component to be displayed on the hazard label: The value "True" for this means that the name of the actual component shall be printed on the hazard label as well as in section 2 of the SDS under the sub-heading 'Dangerous substances'�. The default value of this element will be 'false'�. </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element minOccurs="0" name="BrTransportInformation">
                        <xs:complexType>
                            <xs:sequence>
                                <xs:element maxOccurs="1" minOccurs="0" name="IsDangerReleasingSubstance" type="boolean">
                                    <xs:annotation>
                                        <xs:documentation>according to Canadian TDG</xs:documentation>
                                    </xs:annotation>
                                </xs:element>
                            </xs:sequence>
                        </xs:complexType>
                    </xs:element>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>
    <xs:complexType name="TransportBR">
        <xs:sequence>
            <xs:element minOccurs="0" name="UnNo" type="eSDScom:int4"> </xs:element>
            <xs:element minOccurs="0" name="ProperShippingName" type="eSDScom:Phrase"> </xs:element>
            <xs:element maxOccurs="unbounded" minOccurs="0" name="DangerReleasingSubstance" type="eSDScom:Phrase"> </xs:element>
            <xs:element minOccurs="0" name="Class" type="eSDScom:TransportClassEnum">
                <xs:annotation>
                    <xs:documentation>The chemical’s most important transport hazard class. </xs:documentation>
                </xs:annotation>
            </xs:element>
            <xs:element minOccurs="0" name="Division" type="eSDScom:string4">
                <xs:annotation>
                    <xs:appinfo>SDScomBau</xs:appinfo>
                    <xs:appinfo>SDScomChem</xs:appinfo>
                </xs:annotation>
            </xs:element>
            <xs:element maxOccurs="2" minOccurs="0" name="Subrisk" type="eSDScom:TransportClassEnum"/>
            <xs:element minOccurs="0" name="HazardNumber" type="eSDScom:string4">
                <xs:annotation>
                    <xs:appinfo>SDScomBau</xs:appinfo>
                    <xs:appinfo>SDScomChem</xs:appinfo>
                </xs:annotation>
            </xs:element>
            <xs:element minOccurs="0" name="PackingGroup" type="eSDScom:PackingGroupEnum">
                <xs:annotation>
                    <xs:appinfo>SDScomBau</xs:appinfo>
                    <xs:appinfo>SDScomChem</xs:appinfo>
                </xs:annotation>
            </xs:element>
            <xs:element minOccurs="0" name="OtherInformation">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element maxOccurs="unbounded" minOccurs="0" name="SpecialProvisions" type="eSDScom:string80"/>
                        <xs:element maxOccurs="1" minOccurs="0" name="CategoryQty" type="eSDScom:string20"> </xs:element>
                        <xs:element maxOccurs="1" minOccurs="0" name="LimitedQty" type="eSDScom:string80"> </xs:element>
                        <xs:element maxOccurs="unbounded" minOccurs="0" name="AdditionalInfo" type="eSDScom:Phrase"/>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="RegulationsBR">
        <xs:annotation>
            <xs:documentation>Regulations valid for the product of mixture as a whole. For ingredient information, refer to type ComponentTR.</xs:documentation>
        </xs:annotation>
        <xs:sequence>
            <xs:element maxOccurs="unbounded" minOccurs="0" name="OtherLegislation" type="eSDScom:Phrase"/>
        </xs:sequence>
    </xs:complexType>
</xs:schema>
